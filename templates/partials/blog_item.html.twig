<div class="list-item">


    <div class="list-blog-header">
        {% if page.header.link %}
            <h4>
                {% if page.header.continue_link is not sameas(false) %}
                <a href="{{ page.url }}"><i class="fa fa-angle-double-right"></i></a>
                {% endif %}
                <a href="{{ page.header.link }}">{{ page.title }}</a>
            </h4>
        {% else %}
            <h4><a href="{{ page.url }}">{{ page.title }}</a></h4>
        {% endif %}
    </div>

    {% if page.header.continue_link is sameas(false) %}
        <p>{{ page.content }}</p>
        {% if not truncate %}
        {% set show_prev_next = true %}
        {% endif %}
    {% elseif truncate and page.summary != page.content %}
        <p>{{ page.summary }}</p>
        <p><a href="{{ page.url }}" class="button primary">Read More +</a></p>
    {% elseif truncate %}
        {% if page.summary != page.content %}
            <p>{{ page.content|truncate(550) }}</p>
        {% else %}
            <p>{{ page.content }}</p>
        {% endif %}
        <p><a href="{{ page.url }}" class="button primary">Read More +</a></p>
    {% else %}
        <p>{{ page.content }}</p>
        {% set show_prev_next = true %}
    {% endif %}

    <div class="list-blog-details">
        <span class="list-blog-date">
            Posted on {{ page.date|date("M") }} {{ page.date|date("d") }}, {{ page.date|date("Y") }}
        </span>
        {% if page.taxonomy.tag %}
        <span class="tags">
            Tags:
            {% for tag in page.taxonomy.tag %}
            <a href="{{ base_url }}/tag{{ config.system.param_sep }}{{ tag }}">{{ tag }}</a>
            {% endfor %}
        </span>
        {% endif %}
    </div>

    {% if show_prev_next %}

        <p class="prev-next">
            {% if not page.isFirst %}
                <a class="button" href="{{ page.nextSibling.url }}"><i class="fa fa-chevron-left"></i> Next Post</a>
            {% endif %}

            {% if not page.isLast %}
                <a class="button" href="{{ page.prevSibling.url }}">Previous Post <i class="fa fa-chevron-right"></i></a>
            {% endif %}
        </p>
    {% endif %}
</div>
